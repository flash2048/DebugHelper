<platformUi:DialogWindow x:Class="DebugHelper.Dialogs.ExportDialog"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DebugHelper.Dialogs"
             xmlns:avalonedit="http://icsharpcode.net/sharpdevelop/avalonedit"
             xmlns:platformUi="clr-namespace:Microsoft.VisualStudio.PlatformUI;assembly=Microsoft.VisualStudio.Shell.15.0"
             xmlns:debugHelper="clr-namespace:DebugHelper"
             mc:Ignorable="d" 
             Style="{StaticResource CustomWindowStyle}"
             d:DesignHeight="450" d:DesignWidth="833.5">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <TabControl x:Name="tabs" Margin="0,25,246,0">
            <TabItem Header="C#" FontWeight="Bold" IsSelected="True">
                <Grid Background="#FFE5E5E5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="50*"/>
                        <ColumnDefinition Width="20*"/>
                        <ColumnDefinition Width="533*"/>
                    </Grid.ColumnDefinitions>
                    <avalonedit:TextEditor x:Name="cSharpEditor" IsReadOnly="True"
                        ShowLineNumbers="True" 
                        SyntaxHighlighting="C#" 
                        Text="Enter the variable from above and press the 'Enter' key." Grid.ColumnSpan="3" />
                </Grid>
            </TabItem>
            <TabItem Header="Console" FontWeight="Bold">
                <Grid Background="#FFE5E5E5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="12*"/>
                        <ColumnDefinition Width="59*"/>
                        <ColumnDefinition Width="533*"/>
                    </Grid.ColumnDefinitions>
                    <avalonedit:TextEditor x:Name="consoleEditor" IsReadOnly="True"
                                           ShowLineNumbers="True" 
                                           SyntaxHighlighting="" 
                                           Text="Enter the variable from above and press the 'Enter' key." Grid.ColumnSpan="3" />
                </Grid>
            </TabItem>
        </TabControl>
        <Button Content=" - " Margin="0,62,160,0" FontWeight="Bold" HorizontalAlignment="Right" Width="20" Height="20" VerticalAlignment="Top" Click="Button_Dec_Click"/>
        <TextBox x:Name="maxDepth" IsReadOnly="True" Margin="0,63,126,0" TextWrapping="Wrap" Text="3" TextAlignment="Center" FontWeight="Bold" HorizontalAlignment="Right" Width="30" Height="18" VerticalAlignment="Top"/>
        <Button Content=" + " Margin="0,62,104,0" FontWeight="Bold" HorizontalAlignment="Right" Width="20" Click="Button_Inc_Click" Height="20" VerticalAlignment="Top"/>
        <Label Content="Depth" HorizontalAlignment="Right" Margin="0,34,96,0" FontWeight="Bold" RenderTransformOrigin="-0.547,-0.955" Width="70" Height="26" VerticalAlignment="Top"/>


        <Button  Margin="0,0,14,63" HorizontalAlignment="Right" Width="152" Height="37" VerticalAlignment="Bottom" Click="CopyToClipboard_Click" FontWeight="Bold">
            <DockPanel>
                <Label Content="Copy To Clipboard" HorizontalAlignment="Right"/>
            </DockPanel>
        </Button>

        <Button Margin="0,0,14,17" Content="Save To File" HorizontalAlignment="Right" Width="152" Height="37" VerticalAlignment="Bottom" Click="Button_SaveToFile_Click" FontWeight="Bold"/>
        <TextBox x:Name="codeObject" Margin="10,2,14,0" Padding="10, 0, 0, 0" TextWrapping="Wrap" Text="a[0]" VerticalAlignment="Top" Height="20" KeyUp="RunDumpResult_KeyUp" FontWeight="Bold"/>
        <CheckBox x:Name="useTypeFullName" Content="Use Type Full Name" Margin="0,100,26,0" VerticalAlignment="Top" FontSize="14" HorizontalAlignment="Right" Width="188" FontWeight="Bold" IsChecked="False" Click="checkbox_Checked" />
        <CheckBox x:Name="ignoreIndexers" Content="Ignore Indexers" Margin="0,123,26,0" VerticalAlignment="Top" FontSize="14" HorizontalAlignment="Right" Width="188" FontWeight="Bold" IsChecked="False" Click="checkbox_Checked" />
        <CheckBox x:Name="ignoreDefaultValues" Content="Ignore Default Values" Margin="0,146,26,0" VerticalAlignment="Top" FontSize="14" HorizontalAlignment="Right" Width="188" FontWeight="Bold" IsChecked="False" Click="checkbox_Checked" />
        <CheckBox x:Name="setPropertiesOnly" Content="Set Properties Only" Margin="0,169,26,0" VerticalAlignment="Top" FontSize="14" HorizontalAlignment="Right" Width="188" FontWeight="Bold" IsChecked="False" Click="checkbox_Checked" />
        <CheckBox x:Name="trimInitialVariableName" Content="Trim Initial Variable Name" Margin="0,192,10,0" VerticalAlignment="Top" FontSize="14" HorizontalAlignment="Right" Width="204" FontWeight="Bold" IsChecked="False" Click="checkbox_Checked" />
        <CheckBox x:Name="trimTrailingColonName" Content="Trim Trailing Colon Name" Margin="0,215,10,0" VerticalAlignment="Top" FontSize="14" HorizontalAlignment="Right" Width="204" FontWeight="Bold" IsChecked="False" Click="checkbox_Checked" />

    </Grid>
</platformUi:DialogWindow>
